<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battleRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/battle_bg_sky_glass">
    

    <!-- The first row is W:match_parent H:300px -->

    <RelativeLayout
        android:id="@+id/topRoot"
        android:layout_width="match_parent"
        android:layout_height="300px"
         >

        <TextView
            android:id="@+id/txtHP"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:paddingTop = "8dp"
            android:paddingLeft = "10dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="18dp"
            android:text="HP "
            android:background="#d2691e"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/txtHP"
            android:layout_alignBottom="@+id/txtHP"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="#d2691e"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="Score 0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <!-- The second row is "280px" H:468px  ,   915px, 468px -->

    <RelativeLayout
        android:id="@+id/leftRoot"
        android:layout_width="280px"
        android:layout_height="468px"
        android:layout_below="@+id/topRoot" >

<!--         <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button2" /> -->

           <ImageView
               android:id="@+id/imageView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="33dp"
               android:src="@drawable/hero_new" />
           
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightRoot"
        android:layout_width="915px"
        android:layout_height="468px"
        android:layout_below="@+id/topRoot"
        android:layout_toRightOf="@+id/leftRoot" >

<!--         <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button3" /> -->
            
    </RelativeLayout>
    


</RelativeLayout>
